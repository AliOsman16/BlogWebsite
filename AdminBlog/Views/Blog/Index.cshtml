@model IEnumerable<AdminBlog.Models.Blog>
@{
    ViewData["Title"] = "Author";
}



<table class="table table-hover">
    <thead>
    <th scope="col">Id</th>
    <th scope="col">Name</th>
    <th scope="col"></th>
    </thead>
    <tbody>
        <a href="/Blog/Blog" class="btn btn-success">Blog Ekle</a>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>
                    @if (item.IsPublish)
                    {
                        <a class="btn btn-success">Yayınlandı</a>

                    }
                    else
                    {
                        <a class="btn btn-light" asp-route-id="@item.Id" asp-action="Publish">Yayınla</a>
                    }
                    <form method="POST" action="/Home/DeleteBlog" style="display:inline;">
                    <input type="hidden" name="Id" value="@item.Id">
                    <button type="submit" class="btn btn-danger" 
                        onclick="return confirm('Bu blogu silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>         

        }
    </tbody>
</table>