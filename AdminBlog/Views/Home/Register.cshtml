@{
    ViewData["Title"] = "Register Page";
}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 12px;">
        <h3 class="text-center mb-4">Bize katıl!</h3>
        <form method="POST" action="/Home/Register" autocomplete="off">
            @Html.AntiForgeryToken()
            <div class="form-group mb-4" id="name-group">
                <label for="FirstName" class="form-label">İsim</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Lütfen adınızı giriniz">
            </div>
            <div class="form-group mb-4" id="lastname-group">
                <label for="LastName" class="form-label">Soyisim</label>
                <input type="text" class="form-control" id="Surname" name="Surname" placeholder="Lütfen soyadınızı giriniz">
            </div>
            <div class="form-group mb-4">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" placeholder="Lütfen email giriniz" required>
            </div>
            <div class="form-group mb-4">
                <label for="Password" class="form-label">Parola</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Lütfen parola giriniz" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Kayıt ol</button>
        </form>
        <div class="text-center">
            <span>Zaten hesabın var mı?</span>
            <a href="/Home/Index" class="btn btn-outline-secondary w-100 mt-2">Giriş yap</a>
        </div>
    </div>
</div>
